@page
@model FinalProject.Pages.ComposeMailModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Compose Email</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-4">
        <h1>Compose Email</h1>

        @if (!string.IsNullOrEmpty(Model.errorMessage))
        {
            <div class="alert alert-danger">@Model.errorMessage</div>
        }

        @if (!string.IsNullOrEmpty(Model.successMessage))
        {
            <div class="alert alert-success">@Model.successMessage</div>
        }

        <form method="post">
            <div class="form-group">
                <label for="EmailReceiver">To:</label>
                <input type="email" class="form-control" id="EmailReceiver" name="EmailReceiver" required />
            </div>

            <div class="form-group">
                <label for="EmailSubject">Subject:</label>
                <input type="text" class="form-control" id="EmailSubject" name="EmailSubject" required />
            </div>

            <div class="form-group">
                <label for="EmailMessage">Body:</label>
                <textarea class="form-control" id="EmailMessage" name="EmailMessage" rows="4" required></textarea>
            </div>

            <input type="hidden" id="EmailIsRead" name="EmailIsRead" value="0" />
            <input type="hidden" id="EmailSender" name="EmailSender" value="your-sender-email@example.com" />

            <button type="submit" class="btn btn-primary">Send Email</button>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>