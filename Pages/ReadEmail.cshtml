@page
@model FinalProject.Pages.ReadEmailModel
@{
}
<br />
<div class="text-center">
	<h2 class="display-6">Reading Email</h2>
</div>
<form method="post">
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label ">From:</label>
		<div class="col-sm-6">
			<div>@Model.emailInfo.EmailSender</div>
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Subject:</label>
		<div class="col-sm-6">
			<div>@Model.emailInfo.EmailSubject</div>
		</div>
		<div class="row mb-3">
			<label class="col-sm-3 col-form-label">Message:</label>
			<div class="col-sm-6">
				<div>@Model.emailInfo.EmailMessage</div>
			</div>
		</div>
		<div class="row mb-4">
			<div class="col-sm-2 offset-sm-3 d-grid">
				<a class="btn btn-primary btn-sm" href="DeleteEmail?emailid=EmailID">Delete</a>
			</div>
			<div class="col-sm-2 d-grid">
				<a class="btn btn-primary" href="/Index" role="button">HOME</a>
			</div>
		</div>
</form>
